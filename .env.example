# ==========================================
# Bybit API Credentials
# ==========================================
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# ==========================================
# Environment Selection
# ==========================================
# Choose ONE of the following options:

# Option 1: Mainnet (PRODUCTION - REAL MONEY)
# Default if no custom URLs specified
# BYBIT_TESTNET=false

# Option 2: Demo Trading (RECOMMENDED FOR TESTING)
# Uses "Demo Trading" mode within your main Bybit account
# IMPORTANT: Still shares margin with Spot/Futures on UTA
# See RISK_ISOLATION.md for safety guidelines
#BYBIT_REST_URL=https://api.bybit.com
#BYBIT_WS_URL=wss://stream.bybit.com/v5/public/linear
BYBIT_REST_URL=https://api-demo.bybit.com
BYBIT_WS_URL=wss://stream-demo.bybit.com/v5/public/linear

# Option 3: Testnet (Separate Environment)
# BYBIT_TESTNET=true
# (Testnet URLs will be used automatically)

# ==========================================
# Trading Parameters
# ==========================================
MAX_POSITION_SIZE_USD=1000.0
STOP_LOSS_PERCENT=0.5
TAKE_PROFIT_PERCENT=1.0

# Momentum threshold for entry signals (%)
# Lower = more sensitive, more trades (e.g., 0.1 = enter on 0.1% price movement)
# Higher = less sensitive, fewer but stronger signals (e.g., 0.2 = enter on 0.2% movement)
# Recommended: 0.1-0.2 for scalping, 0.15 is balanced default
MOMENTUM_THRESHOLD=0.15

# Minimum trend strength required for entry (%)
# Prevents trading in sideways/choppy markets that cause 50% winrate
# Measures difference between 50-tick and 200-tick VWAP
# Lower = allows trading in weaker trends (e.g., 0.05 = very permissive)
# Higher = requires stronger trends (e.g., 0.2 = only strong trends)
# Recommended: 0.1% for balanced filtering
MIN_TREND_STRENGTH=0.1

# ==========================================
# Scanner Configuration
# ==========================================
SCAN_INTERVAL_SECS=60
MIN_TURNOVER_24H_USD=10000000.0
SCORE_THRESHOLD_MULTIPLIER=1.2

# ==========================================
# Risk Management
# ==========================================
MAX_SPREAD_BPS=20.0
STALE_DATA_THRESHOLD_MS=500

# âœ… PUMP PROTECTION: Blacklist specific symbols (comma-separated)
# Example: BLACKLIST_SYMBOLS=AXSUSDT,WIFUSDT,PEPEUSDT
# Leave empty to allow all symbols
BLACKLIST_SYMBOLS=

# ==========================================
# Logging (optional)
# ==========================================
RUST_LOG=info
